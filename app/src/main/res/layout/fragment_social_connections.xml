<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".fragments.SocialConnectionsFragment">

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:text="Facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/connect_sosmed_facebook_unselected"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/white"
            android:minHeight="@dimen/social_share_height"
            android:drawablePadding="10dip"
            android:paddingLeft="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_grey_1"/>
        <Button
            android:text="Twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/connect_sosmed_twitter_unselected"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/white"
            android:minHeight="@dimen/social_share_height"
            android:drawablePadding="10dip"
            android:paddingLeft="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_grey_1"/>
        <Button
            android:text="Instagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/connect_sosmed_instagram_unselected"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/white"
            android:minHeight="@dimen/social_share_height"
            android:drawablePadding="10dip"
            android:paddingLeft="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_grey_1"/>
        <Button
            android:text="Google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/connect_sosmed_googleplus"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/white"
            android:minHeight="@dimen/social_share_height"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_grey_1"/>
        <Button
            android:text="Blogger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/connect_sosmed_blogger"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/white"
            android:minHeight="@dimen/social_share_height"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_grey_1"/>
        <Button
            android:text="Tumblr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/connect_sosmed_tumblr"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/white"
            android:minHeight="@dimen/social_share_height"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_grey_1"/>
    </LinearLayout>


</RelativeLayout>

