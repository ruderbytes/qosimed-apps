<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="@drawable/bg_main">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fadeScrollbars="false"
        android:fillViewport="true">
        <!--android:scrollbarFadeDuration="0"-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">


            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:mcv_selectionColor="#04d428"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                />
            <HorizontalScrollView
                android:id="@+id/horizonSV"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:scrollbarThumbHorizontal="@drawable/horizontal_scrollview_bg"
                android:scrollbarTrackHorizontal="@drawable/horizontal_scrollview_line"
                android:fadeScrollbars="false"
                android:layout_marginBottom="30dp"
                android:padding="10dp"
                >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="23dp">

                    <RelativeLayout
                        android:background="#e9e6e9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        >
                        <ImageView
                            android:id="@+id/img_kajian_12"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/alaqsa"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="7dp"/>
                        <TextView
                            android:id="@+id/kajian_remind_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="17"
                            android:textSize="27sp"
                            android:layout_toRightOf="@id/img_kajian_12"/>
                        <TextView
                            android:id="@+id/kajian_remind_22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remind me..."
                            android:layout_toRightOf="@id/img_kajian_12"
                            android:layout_below="@id/kajian_remind_12"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:background="#e9e6e9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        >
                        <ImageView
                            android:id="@+id/img_kajian_13"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/kabah"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="7dp"/>
                        <TextView
                            android:id="@+id/kajian_remind_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="29"
                            android:textSize="27sp"
                            android:layout_toRightOf="@id/img_kajian_13"/>
                        <TextView
                            android:id="@+id/kajian_remind_23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remind me..."
                            android:layout_toRightOf="@id/img_kajian_13"
                            android:layout_below="@id/kajian_remind_13"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:background="#e9e6e9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        >
                        <ImageView
                            android:id="@+id/img_kajian_1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/background_profile"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="7dp"/>
                        <TextView
                            android:id="@+id/kajian_remind_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13"
                            android:textSize="27sp"
                            android:layout_toRightOf="@id/img_kajian_1"/>
                        <TextView
                            android:id="@+id/kajian_remind_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remind me..."
                            android:layout_toRightOf="@id/img_kajian_1"
                            android:layout_below="@id/kajian_remind_1"
                            android:textSize="15sp"/>
                    </RelativeLayout>
                </LinearLayout>

            </HorizontalScrollView>

        </TableLayout>
    </ScrollView>

